typedef set<ii> sii;
typedef set<int> si;
typedef pair<char, int> ci;

ll freq[23][23];
ll cat[23][23];

int main (int argc, char const* argv[]) {	
	fr(i,0,20) {
		cat[i][0] = 1;
		freq[i][0] = 1;
	}
	freq[0][1] = 1;
	fr(i,1,20){
		fe(j,1,i+1){
			cat[i][j] = freq[i-1][j];
			freq[i][j] = cat[i][j] + freq[i][j-1];
		}
	}
	int n, k=1;
	while(sc1(n)==1){ 
		if(!k) _ 
		printf("%lld\n", cat[n][n]);
		k=0;
	 }



	return 0;
}
















